{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "max-len": [0],
    "no-console": [0],
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "no-underscore-dangle": ["error", { "allow": ["_", "_GET", "_POST", "_ID", "_ERROR", "_USER", "_HEADERS", "_raw"] }],
    "no-unused-expressions": [0, { "allowTernary": true }],
    "no-nested-ternary": [0],
    "no-param-reassign": [0],
    "no-plusplus": [0],
    "newline-per-chained-call": [0],
    "semi": ["error", "always"]
  }
}
