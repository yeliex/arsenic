{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "array-callback-return": ["error"],
    "comma-dangle": ["error", "never"],
    "eqeqeq": ["error"],
    "max-len": [0],
    "no-console": [0],
    "no-loop-func": ["error"],
    "no-multi-spaces": ["error"],
    "no-multiple-empty-lines": ["error", { "max": 1 }],
    "no-underscore-dangle": ["error", { "allow": ["_", "_GET", "_POST", "_ID", "_ERROR", "_USER", "_HEADERS"] }],
    "no-unused-expressions": [0, { "allowTernary": true }],
    "no-new-wrappers": ["error"],
    "no-nested-ternary": [0],
    "no-param-reassign": [0],
    "no-plusplus": [0],
    "no-var": ["error"],
    "prefer-const": ["error"],
    "prefer-template": ["error"],
    "no-duplicate-imports": ["error"],
    "indent": ["error", 2],
    "newline-per-chained-call": [0]
  }
}
